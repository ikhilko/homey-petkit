{
  "name": {
    "en": "Petkit Air Purifier"
  },
  "class": "fan",
  "capabilities": [
    "onoff",
    "measure_pm25",
    "meter_filter_life",
    "dim",
    "purifier_mode"
  ],
  "capabilitiesOptions": {
    "onoff": {
      "title": {
        "en": "Power"
      }
    },
    "measure_pm25": {
      "title": {
        "en": "Air Quality (PM2.5)"
      },
      "units": "μg/m³"
    },
    "meter_filter_life": {
      "title": {
        "en": "Filter Life"
      },
      "units": "%"
    },
    "dim": {
      "title": {
        "en": "Fan Speed"
      },
      "min": 0,
      "max": 1,
      "step": 0.1
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "cloud"
  ],
  "images": {
    "small": "/drivers/air-purifier/assets/images/small.png",
    "large": "/drivers/air-purifier/assets/images/large.png"
  },
  "pair": [
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "title": {
          "en": "Login to Petkit"
        },
        "usernameLabel": {
          "en": "Email"
        },
        "usernamePlaceholder": {
          "en": "john@example.com"
        },
        "passwordLabel": {
          "en": "Password"
        },
        "passwordPlaceholder": {
          "en": "Password"
        }
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "title": {
          "en": "Select your Petkit Air Purifier"
        }
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "General settings"
      },
      "children": [
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Update interval (seconds)"
          },
          "value": 300,
          "min": 60,
          "max": 3600,
          "step": 60
        }
      ]
    }
  ]
}