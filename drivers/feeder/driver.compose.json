{
  "name": {
    "en": "Petkit Feeder"
  },
  "class": "other",
  "capabilities": [
    "onoff",
    "measure_battery",
    "alarm_generic",
    "meter_food_level"
  ],
  "capabilitiesOptions": {
    "onoff": {
      "title": {
        "en": "Manual Feed"
      },
      "getable": false,
      "setable": true
    },
    "measure_battery": {
      "title": {
        "en": "Battery Level"
      }
    },
    "alarm_generic": {
      "title": {
        "en": "Low Food Alert"
      }
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "cloud"
  ],
  "images": {
    "small": "/drivers/feeder/assets/images/small.png",
    "large": "/drivers/feeder/assets/images/large.png"
  },
  "pair": [
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "title": {
          "en": "Login to Petkit"
        },
        "usernameLabel": {
          "en": "Email"
        },
        "usernamePlaceholder": {
          "en": "john@example.com"
        },
        "passwordLabel": {
          "en": "Password"
        },
        "passwordPlaceholder": {
          "en": "Password"
        }
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      },
      "options": {
        "title": {
          "en": "Select your Petkit Feeder"
        }
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "General settings"
      },
      "children": [
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Update interval (seconds)"
          },
          "value": 300,
          "min": 60,
          "max": 3600,
          "step": 60
        },
        {
          "id": "low_food_threshold",
          "type": "number",
          "label": {
            "en": "Low food threshold (%)"
          },
          "value": 20,
          "min": 5,
          "max": 50,
          "step": 5
        }
      ]
    }
  ]
}