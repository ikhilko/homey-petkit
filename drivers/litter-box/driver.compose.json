{
  "name": {
    "en": "Petkit Litter Box"
  },
  "class": "other",
  "capabilities": [
    "onoff",
    "measure_litter_level",
    "measure_waste_level",
    "alarm_generic"
  ],
  "capabilitiesOptions": {
    "onoff": {
      "title": {
        "en": "Auto Clean"
      }
    },
    "measure_litter_level": {
      "title": {
        "en": "Litter Level"
      },
      "units": "%"
    },
    "measure_waste_level": {
      "title": {
        "en": "Waste Level"
      },
      "units": "%"
    },
    "alarm_generic": {
      "title": {
        "en": "Needs Cleaning"
      }
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "cloud"
  ],
  "images": {
    "small": "/drivers/litter-box/assets/images/small.png",
    "large": "/drivers/litter-box/assets/images/large.png"
  },
  "pair": [
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "title": {
          "en": "Login to Petkit"
        },
        "usernameLabel": {
          "en": "Email"
        },
        "usernamePlaceholder": {
          "en": "john@example.com"
        },
        "passwordLabel": {
          "en": "Password"
        },
        "passwordPlaceholder": {
          "en": "Password"
        }
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "title": {
          "en": "Select your Petkit Litter Box"
        }
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "General settings"
      },
      "children": [
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Update interval (seconds)"
          },
          "value": 300,
          "min": 60,
          "max": 3600,
          "step": 60
        },
        {
          "id": "high_waste_threshold",
          "type": "number",
          "label": {
            "en": "High waste threshold (%)"
          },
          "value": 80,
          "min": 50,
          "max": 95,
          "step": 5
        }
      ]
    }
  ]
}